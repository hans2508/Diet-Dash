<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dash.dietdash.SignUp">

    <TextView
        android:text="Creating your personal account"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:id="@+id/textView"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="@+id/activity_sign_up"
        app:layout_constraintTop_toTopOf="@+id/activity_sign_up"
        android:layout_marginTop="88dp"
        app:layout_constraintRight_toRightOf="@+id/activity_sign_up" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail"
        android:hint="Username"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPass"
        android:fontFamily="serif"
        android:hint="Password"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editConfPass"
        android:hint="Confirm Password"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@+id/editPass"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/editEmail" />

    <Button
        android:text="SIGN UP"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btnSignUp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="profile"
        android:background="@drawable/mybutton"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="@+id/activity_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/editConfPass"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/activity_sign_up" />
</android.support.constraint.ConstraintLayout>
